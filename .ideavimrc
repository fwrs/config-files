set hls
set ideajoin
set relativenumber
set number
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set nowrap
set ignorecase
set smartcase
set cursorline
set termguicolors
set background=light
set signcolumn=yes
set backspace=indent,eol,start
set clipboard^=unnamedplus,ideaput
set splitright
set splitbelow
set iskeyword+=-
set shortmess+=I
set completeopt=menu,menuone,noselect
set nolist
set wrap
set breakindent
set linebreak
set shell=/opt/homebrew/bin/fish
set easymotion
let &listchars='eol:↵,space:·,precedes:<,extends:>,tab:~ ,nbsp:␣'
let &fillchars='eob: '
let &showbreak='   '
let g:EasyMotion_do_mapping=0
let g:mapleader=' '

nnoremap x "_x
nmap <leader>n :nohl<cr>
nmap <leader>l :set list!<cr>
nmap <leader>+ <c-a>
nmap <leader>- <c-x>
nmap <leader>sv <c-w>v
nmap <leader>sh <c-w>s
nmap <leader>se <c-w>=
nmap <leader>sx :close<cr>
nmap <leader>to :tabnew<cr>
nmap <leader>tx :tabclose<cr>
nmap <leader>tn :tabn<cr>
nmap <leader>tp :tabp<cr>
map <leader>ha <Plug>(easymotion-jumptoanywhere)
map <leader>hw <Plug>(easymotion-bd-w)
map <leader>hs <Plug>(easymotion-bd-f)
map ,w [w
map ,e ]w
map ,b [b

nmap ci,w [bv]ws
nmap di,w [bv]wd
nmap yi,w [bv]wy
nmap vi,w [bv]w
vmap vi,w [bv]w
omap vi,w [bv]w
nmap gri,w [bv]wgr
nmap gUi,w [bv]wgU
nmap gui,w [bv]wgu
nmap ci/ T/vt/s
nmap di/ T/vt/d
nmap yi/ T/vt/y
nmap vi/ T/vt/
vmap vi/ T/vt/
omap vi/ T/vt/
nmap gri/ T/vt/gr
nmap gUi/ T/vt/gU
nmap gui/ T/vt/gu
nmap ca/ F/vf/s
nmap da/ F/vf/d
nmap ya/ F/vf/y
nmap va/ F/vf/
vmap va/ F/vf/
omap va/ F/vf/
nmap gra/ F/vf/gr
nmap gUa/ F/vf/gU
nmap gua/ F/vf/gu

Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'vim-scripts/ReplaceWithRegister'
Plug 'inkarkat/vim-ReplaceWithSameIndentRegister'
